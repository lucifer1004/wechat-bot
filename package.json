{
  "name": "wechat-bot",
  "private": true,
  "scripts": {
    "dev:app": "cd app && yarn start",
    "dev:api": "cd api && yarn start:dev",
    "dev": "run-p dev:app dev:api",
    "format": "prettier --write {api,app}/**/*.{js,ts,jsx,tsx,md,json,css}"
  },
  "devDependencies": {
    "husky": "^3.0.0",
    "lerna": "^3.15.0",
    "lint-staged": "^9.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2"
  },
  "workspaces": [
    "api",
    "app"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
